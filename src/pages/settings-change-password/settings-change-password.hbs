{{!< settings/settings-layout}}

<div class="settings-form-container">
    {{> "settings-user-avatar/settings-user-avatar"}}
    <label class="label">Изменить пароль</label>

    {{> "settings-user-input/settings-user-input" inputName="oldPassword" label="Старый пароль" value="*******" }}
    {{> "settings-user-input/settings-user-input"  inputName="newPassword" label="Новый пароль" value="*******" }}
    {{> "settings-user-input/settings-user-input" inputName="repeatPassword" label="Повторите новый пароль" value="*******" }}

    <div class="action-container">
        {{> "button/button" label="Сохранить" link="index.hbs"}}
    </div>
</div>
